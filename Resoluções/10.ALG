algoritmo "dez"
var
   larg, altu, area : real
inicio
      escreva("Digite a largura da parede: ")
      leia(larg)
      escreva("Digite a altura da parede: ")
      leia(altu)
      area <- larg * altu
      Escreval("A área total da parece é ", area, " e precisará de ", area / 2, " litro(s) de tinta")
fimalgoritmo